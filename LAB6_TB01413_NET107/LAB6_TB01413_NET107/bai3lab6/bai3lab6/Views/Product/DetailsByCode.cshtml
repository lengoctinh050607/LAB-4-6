@model bai2lab6.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-4">
    <div class="card border-info shadow" style="max-width: 500px; margin: auto;">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="fa-solid fa-circle-info"></i> Chi tiết sản phẩm</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title text-primary">@Model.Name</h5>
            <hr />
            <p class="card-text fs-5">
                <strong>ID:</strong> @Model.Id <br />
                <strong>Mã Code:</strong> <span class="badge bg-warning text-dark">@Model.Code</span> <br />
                <strong>Giá:</strong> <span class="text-danger fw-bold">@Model.Price.ToString("N0") VNĐ</span>
            </p>
            <div class="mt-3">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>