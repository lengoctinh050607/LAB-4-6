@model bai2lab6.Models.Product
@{
    ViewData["Title"] = "Cập nhật";
}

<h3>Cập nhật sản phẩm</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label class="fw-bold">Mã sản phẩm</label>
                <input asp-for="Code" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Giá bán</label>
                <input asp-for="Price" type="number" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-warning">Cập nhật</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>