@model bai2lab6.Models.Product
@{
    ViewData["Title"] = "Thêm mới";
}

<h3>Thêm sản phẩm mới</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Product" asp-action="Create" method="post">

            <div class="form-group mb-3">
                <label class="fw-bold">Mã sản phẩm (VD: ABC-1234)</label>
                <input asp-for="Code" class="form-control" placeholder="XXX-YYYY" required />
            </div>

            <div class="form-group mb-3">
                <label class="fw-bold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label class="fw-bold">Giá bán</label>
                <input asp-for="Price" type="number" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-success">Lưu lại</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </form>
    </div>
</div>