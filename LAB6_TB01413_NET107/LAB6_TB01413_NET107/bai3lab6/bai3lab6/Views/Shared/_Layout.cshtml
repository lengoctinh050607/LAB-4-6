<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bai2lab6</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/darkly/bootstrap.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bai2lab6.styles.css" asp-append-version="true" />
</head>
<body class="bg-dark text-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Product" asp-action="Index">
                    <i class="fa-solid fa-store me-2"></i>bai2lab6
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Product" asp-action="Index">
                                <i class="fa-solid fa-house me-1"></i> Trang chủ
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Product" asp-action="Index">
                                <i class="fa-solid fa-box-open me-1"></i> Quản lý sản phẩm
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link"><i class="fa-solid fa-user"></i> Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="card bg-secondary text-light shadow-sm border-0">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <footer class="footer mt-3 bg-black text-center text-light py-3 border-top border-secondary">
        &copy; 2025 - <b>bai2lab6</b>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
