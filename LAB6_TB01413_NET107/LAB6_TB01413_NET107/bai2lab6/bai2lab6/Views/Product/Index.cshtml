@model IEnumerable<bai2lab6.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="text-primary"><i class="fa-solid fa-list"></i> Danh sách sản phẩm</h2>
    <a asp-controller="Product" asp-action="Create" class="btn btn-success">
        <i class="fa-solid fa-plus"></i> Thêm mới
    </a>
</div>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Giá bán</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="fw-bold">@item.Name</td>
                    <td class="text-danger">@item.Price.ToString("N0") đ</td>
                    <td class="text-center">
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-2">
                            <i class="fa-solid fa-pen-to-square"></i> Sửa
                        </a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này không?');">
                            <i class="fa-solid fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted py-3">Chưa có dữ liệu sản phẩm.</td>
            </tr>
        }
    </tbody>
</table>