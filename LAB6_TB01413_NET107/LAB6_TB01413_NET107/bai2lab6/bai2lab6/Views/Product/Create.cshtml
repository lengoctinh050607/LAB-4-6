@model bai2lab6.Models.Product

@{
    ViewData["Title"] = "Thêm mới";
}

<h3 class="mb-3">Thêm sản phẩm mới</h3>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Product" asp-action="Create" method="post">

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Tên sản phẩm</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên..." required />
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold">Giá bán</label>
                <input asp-for="Price" type="number" class="form-control" placeholder="Nhập giá..." required />
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success fw-bold">
                    <i class="fa-solid fa-check"></i> LƯU LẠI
                </button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-light border">
                    <i class="fa-solid fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>