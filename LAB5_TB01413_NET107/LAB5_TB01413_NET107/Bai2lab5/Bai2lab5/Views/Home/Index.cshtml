@using Bai2lab5.Model
@model List<Major>

@{
    ViewData["Title"] = "Công Nghệ Thông Tin";
}

<style>

    .section-title {
        text-align: center;
        color: #0d6efd;
        font-weight: 700;
        letter-spacing: 1px;
        margin-bottom: 40px;
    }

    .major-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 25px;
        padding: 20px;
    }

    .major-item {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 4px 14px rgba(0,0,0,0.12);
        cursor: pointer;
    }

        .major-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 8px 22px rgba(0,0,0,0.18);
        }

        .major-item img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

        .major-item p {
            margin: 0;
            padding: 18px 10px;
            background: #f8f9fa;
            font-weight: 600;
            text-align: center;
            font-size: 0.9em;
            color: #333;
            transition: background 0.3s;
        }

        .major-item:hover p {
            background: #e9ecef;
        }

</style>

<h1 class="section-title">CÔNG NGHỆ THÔNG TIN</h1>

<div class="major-container">
    @foreach (var major in Model)
    {
        <div class="major-item">
            <img src="~/images/@major.Image_string"
                 alt="@major.Subname_string"
                 asp-append-version="true" />

            <p>@major.Subname_string</p>
        </div>
    }
</div>