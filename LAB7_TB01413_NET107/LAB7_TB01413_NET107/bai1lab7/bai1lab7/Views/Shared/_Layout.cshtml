            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="text-center py-3 text-muted">
        &copy; @DateTime.Now.Year - bai1lab7
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
