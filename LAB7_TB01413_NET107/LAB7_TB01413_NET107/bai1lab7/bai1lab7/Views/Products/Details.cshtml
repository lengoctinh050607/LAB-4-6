@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h2 class="mb-3">Details</h2>
<h5 class="text-muted mb-4">Products</h5>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">Category</dt>
    <dd class="col-sm-9">@Model.Category</dd>

    <dt class="col-sm-3">Color</dt>
    <dd class="col-sm-9">@Model.Color</dd>

    <dt class="col-sm-3">Unit Price</dt>
    <dd class="col-sm-9">@Model.UnitPrice.ToString("N2")</dd>

    <dt class="col-sm-3">Available Quantity</dt>
    <dd class="col-sm-9">@Model.AvailableQuantity</dd>

    <dt class="col-sm-3">Created Date</dt>
    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
</div>
