@model InventoryManagement.Models.Product

@{
    ViewData["Title"] = "Create";
}

<h2 class="mb-3">Create</h2>
<h5 class="text-muted mb-4">Products</h5>

<form asp-action="Create" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Color" class="form-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="UnitPrice" class="form-label"></label>
        <input asp-for="UnitPrice" class="form-control" />
        <span asp-validation-for="UnitPrice" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="AvailableQuantity" class="form-label"></label>
        <input asp-for="AvailableQuantity" class="form-control" />
        <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="CreatedDate" class="form-label"></label>
        <input asp-for="CreatedDate" class="form-control" />
        <span asp-validation-for="CreatedDate" class="text-danger"></span>
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">Back to List</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
