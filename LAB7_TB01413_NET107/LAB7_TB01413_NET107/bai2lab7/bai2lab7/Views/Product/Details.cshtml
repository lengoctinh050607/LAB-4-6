@model Lab7Bai2.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #f5f7fb;
    }

    .detail-wrapper {
        margin-top: 40px;
    }

    .detail-card {
        background: #ffffff;
        border-radius: 14px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.08);
        padding: 30px;
    }

    .price-main {
        color: #0d6efd;
        font-weight: 700;
        font-size: 26px;
    }

    .thumb-small img {
        width: 70px;
        height: 70px;
        object-fit: contain;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        margin-right: 8px;
    }

    .desc-link a {
        color: #0d6efd;
        text-decoration: none;
        font-size: 15px;
    }

        .desc-link a:hover {
            text-decoration: underline;
        }

    .desc-text {
        margin-top: 15px;
        color: #444;
        font-size: 15px;
        line-height: 1.6;
    }
</style>

<div class="container detail-wrapper">
    <div class="detail-card">
        <div class="row g-4">

            <div class="col-md-5 text-center">
                <img src="@Model.ImageUrl" style="max-width:100%; border-radius:10px;" />

                <div class="thumb-small d-flex justify-content-center mt-3">
                    <img src="@Model.ImageUrl" />
                    <img src="@Model.ImageUrl" />
                    <img src="@Model.ImageUrl" />
                </div>
            </div>


            <div class="col-md-7">

                <h2 style="font-weight:700;">@Model.Name</h2>

                <p class="price-main">@Model.Price.ToString("$#,0.00")</p>

                <div class="mb-3">
                    <button class="btn btn-outline-secondary me-2">THÊM VÀO GIỎ</button>
                    <button class="btn btn-primary">MUA NGAY</button>
                </div>



                <ul class="desc-link">
                    <li><a href="#">• Bộ phụ kiện S-System</a></li>
                    <li><a href="#">• Chi tiết sản phẩm</a></li>
                    <li><a href="#">• Thông số kỹ thuật</a></li>
                    <li><a href="#">• Thông tin ống kính</a></li>
                </ul>

                <div class="desc-text">
                    <p>
                        @(
                                                string.IsNullOrEmpty(Model.Description)
                                                ? "Sản phẩm thuộc danh mục máy ảnh cao cấp, phù hợp cho nhu cầu chụp chân dung, du lịch hoặc làm ví dụ trong bài thực hành ASP.NET Core MVC."
                                                : Model.Description
                                                )
                    </p>
                </div>

                <div class="mt-3">
                    <a asp-action="Index">&laquo; Quay lại danh sách sản phẩm</a>
                </div>

            </div>
        </div>
    </div>
</div>
